<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlueMarket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#304FFE</item>
        <item name="colorPrimaryVariant">#303F9F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#607D8B</item>
        <item name="colorSecondaryVariant">#455A64</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue</item>
        <item name="android:fontFamily">@font/caviar_dreams</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HiMarket.Fullscreen" parent="Theme.BlueMarket">
        <item name="android:actionBarStyle">@style/Widget.Theme.HiMarket.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.HiMarket.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>