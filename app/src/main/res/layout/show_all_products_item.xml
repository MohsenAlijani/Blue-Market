<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/shape_image"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/img_all_products"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_all_products_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:minLines="4"
        android:maxLines="4"
        android:ellipsize="end"
        android:justificationMode="inter_word"
        android:padding="4dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_all_products"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_all_products_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:padding="2dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:padding="2dp"
        android:text="$"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/txt_all_products_price"
        app:layout_constraintStart_toEndOf="@+id/txt_all_products_price" />
</androidx.constraintlayout.widget.ConstraintLayout>